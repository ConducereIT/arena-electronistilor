// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Configure the client generator for Prisma
generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-arm64-openssl-1.0.x"]
}

// Define the data source for the Prisma schema
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Define the data model for the 'User' table
model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    password String
}

// Define the data model for the 'Session' table
model Session {
    id    Int    @id @default(autoincrement())
    email String @unique
    token String
}

// Define the data model for the 'Session' table
model Questions {
    id       Int    @id @default(autoincrement())
    question String
    answer   Json[]
}

// Define the data model for the "QuickRound" table
model QuickRound {
    id        Int    @id @default(autoincrement())
    teamName  String
    teamScore Int
}

// Define the data model for the 'leaderboard' table
model Leaderboard {
    id         Int      @id @default(autoincrement())
    playerName String
    score      Int
    date       DateTime
}
